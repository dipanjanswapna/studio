rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Public collections are readable by anyone
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow writes for authenticated users (e.g., admins)
    }
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /brands/{brandId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /deals/{dealId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /rewards/{rewardId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /settings/site {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // Users can manage their own profile and sub-collections
    match /users/{userId}/{document=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Orders can be created by the owner, and read by the owner.
    // In a real app, you'd add admin access rules here too.
    match /orders/{orderId} {
        allow read: if request.auth != null && request.auth.uid == resource.data.userId;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Allow reading and writing reviews. This rule allows the collectionGroup query.
    match /{path=**}/reviews/{reviewId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
